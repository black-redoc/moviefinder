<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.josebas.moviefinder.ui.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/movieFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.josebas.moviefinder.ui.MovieFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_movie">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/seriesFragment"
        android:name="com.josebas.moviefinder.ui.SeriesFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_series">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.josebas.moviefinder.ui.SearchFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/movieFragment" />
    </fragment>
</navigation>